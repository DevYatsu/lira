Let: Statement = {
    "let" <modifiers:Modifier*> <name:"identifier"> <ty:(":" <"identifier">)?>  "="  <value:Expr> => (Statement::Let {
        atomic: modifiers.contains(&"atomic"),
        lazy: modifiers.contains(&"lazy"),
        mutable: modifiers.contains(&"mut"),
        name: name,
        ty: ty,
        value: value,
    }),
};

Modifier: &'static str = {
    "atomic" => "atomic",
    "lazy" => "lazy",
    "mut" => "mut",
};

