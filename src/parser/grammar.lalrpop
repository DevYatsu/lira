Comma<T>: Vec<T> = { 
    <mut v: (<T> ",")*> <e:T?> => match e {
        None => v,
        Some(e) => { v.push(e); v }
    }
};

Param: (String, Option<String>) = {
    <name:"identifier"> <ty:(":" <"identifier">)?> => (name.to_owned(), ty.map(|s| s.to_owned())),
};


Params: Vec<(String, Option<String>)> = { 
    <params: Comma<Param>> => params,
};




pub Program: Program = {
    "line_end"* <stmts: (<Statement> "line_end"*)*>  => Program { statements: stmts },
};

